<Window x:Class="VR2D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VR2D"
        mc:Ignorable="d"
        Title="Image Viewer" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Column: All controls -->
        <Grid Grid.Column="0" Margin="10,10,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- File selector button and filename textbox -->
            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10">
                <Button Name="BrowseButton" Content="Browse..." Width="100" Height="30" Margin="0,0,0,10"
                        Click="BrowseButton_Click" HorizontalAlignment="Left" />
                <TextBox Name="FileNameTextBox" Width="200" Height="30" IsReadOnly="True"
                         VerticalContentAlignment="Center" />
            </StackPanel>


            <!-- Directional buttons -->
            <StackPanel Grid.Row="2" Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Button Name="UpButton" Grid.Row="0" Grid.Column="1" Width="50" Height="50" Margin="5"
                            Click="UpButton_Click">
                        <TextBlock Text="↑" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Button>

                    <Button Name="LeftButton" Grid.Row="1" Grid.Column="0" Width="50" Height="50" Margin="5"
                            Click="LeftButton_Click">
                        <TextBlock Text="←" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Button>

                    <Button Name="RightButton" Grid.Row="1" Grid.Column="2" Width="50" Height="50" Margin="5"
                            Click="RightButton_Click">
                        <TextBlock Text="→" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Button>
                    <Button Name="DownButton" Grid.Row="2" Grid.Column="1" Width="50" Height="50" Margin="5"
                            Click="LeftButton_Click">
                        <TextBlock Text="D" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>
        <MediaElement Grid.Column="1" Name="DisplayMedia"
                      Margin="10, 10, 10, 10"
                      Stretch="Uniform"
                      Width="{Binding ActualWidth, ElementName=ImageCanvas}"
                      Height="{Binding ActualHeight, ElementName=ImageCanvas}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Volume="0"
                      MediaEnded="DisplayMedia_MediaEnded"
                      Visibility="Collapsed" />
    </Grid>
</Window>