<Window x:Class="VR2D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VR2D"
        mc:Ignorable="d"
        Title="Image Viewer" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- First Row: File selector button and filename textbox -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Name="BrowseButton" Content="Browse..." Width="100" Height="30" Margin="0,0,10,0" Click="BrowseButton_Click"/>
            <TextBox Name="FileNameTextBox" Width="400" Height="30" IsReadOnly="True" VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Second Row: Canvas for image display -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="10">
            <Canvas Name="ImageCanvas" Background="LightGray">
                <Image Name="DisplayImage" Stretch="Uniform"/>
            </Canvas>
        </Border>

        <!-- Third Row: Directional buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Name="LeftButton" Width="50" Height="50" Margin="5" Click="LeftButton_Click">
                <TextBlock Text="←" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Button Name="UpButton" Grid.Row="0" Width="50" Height="50" Margin="5" Click="UpButton_Click">
                    <TextBlock Text="↑" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                <Button Name="DownButton" Grid.Row="1" Width="50" Height="50" Margin="5" Click="DownButton_Click">
                    <TextBlock Text="↓" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </Grid>
            <Button Name="RightButton" Width="50" Height="50" Margin="5" Click="RightButton_Click">
                <TextBlock Text="→" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </StackPanel>

        <!-- Fourth Row: Angle value textboxes -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                <TextBlock Text="X Angle:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Name="XAngleTextBox" Width="80" Height="30" VerticalContentAlignment="Center" TextChanged="AngleTextBox_TextChanged"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Y Angle:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Name="YAngleTextBox" Width="80" Height="30" VerticalContentAlignment="Center" TextChanged="AngleTextBox_TextChanged"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
